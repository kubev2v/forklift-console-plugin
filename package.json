{
  "name": "@monorepo/root",
  "private": true,
  "version": "0.0.1",
  "repository": "git@github.com:kubev2v/forklift-console-plugin.git",
  "license": "Apache-2.0",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "clean": "rm -rf dist && rm -rf coverage && npm run clean -ws",
    "clean:all": "npm run clean && rm -rf node_modules && npm run clean:all -ws",
    "build:dependencies": "NODE_ENV=production npm run build -w @kubev2v/webpack -w @kubev2v/legacy -w @kubev2v/common",
    "build": "NODE_ENV=production npm run build -w @kubev2v/webpack -w @kubev2v/legacy -w @kubev2v/common -w @kubev2v/forklift-console-plugin",
    "start": "npm run build:dependencies && npm run start -w @kubev2v/forklift-console-plugin",
    "start:plugin": "npm run start -w @kubev2v/forklift-console-plugin",
    "start:console": "source ./scripts/configure/openshift.sh && ./scripts/start-console.sh",
    "start:console:oauth": "source ./scripts/configure/openshift-auth.sh && ./scripts/start-console.sh",
    "i18n": "npm run i18n -w @kubev2v/forklift-console-plugin",
    "lint": "npm run lint -w @kubev2v/legacy -w @kubev2v/webpack -w @kubev2v/common -w @kubev2v/forklift-console-plugin",
    "lint:fix": "npm run lint:fix -w @kubev2v/legacy -w @kubev2v/webpack -w @kubev2v/common -w @kubev2v/forklift-console-plugin",
    "test:i18n": "./scripts/test-i18n.sh",
    "test": "npm run test -w @kubev2v/common -w @kubev2v/forklift-console-plugin",
    "test:coverage": "npm run test:coverage -w @kubev2v/common -w @kubev2v/forklift-console-plugin",
    "test:updateSnapshot": "npm run test:updateSnapshot -w @kubev2v/common -w @kubev2v/forklift-console-plugin",
    "helm:lint": "helm lint deployment/forklift-console-plugin/",
    "helm:index": "helm repo index ./tmp/ --url https://kubev2v.github.io/forklift-console-plugin",
    "helm:build": "mkdir -p tmp && helm package -d tmp deployment/forklift-console-plugin/ && npm run helm:index"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.1.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-testing-library": "^5.6.0",
    "i18next-parser": "^6.5.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "prettier": "^2.7.1",
    "prettier-stylelint": "^0.4.2",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^26.0.0",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4",
    "typescript-plugin-css-modules": "^4.1.1"
  }
}
